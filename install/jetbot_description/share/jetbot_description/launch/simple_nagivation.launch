<!-- example of simulation run with SLAM -->
<launch>
  
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0"/>
  <arg name="R" default="0"/>
  <arg name="P" default="0"/>
  <arg name="Y" default="0"/> 
    
  <!-- Gazebo world loading -->
    	<let name="debug" value="false" />
    	<let name="gui" value="true" />
    	<let name="paused" value="false"/>
    	<let name="use_sim_time" value="false"/>
    	<let name="headless" value="false"/>
    	<let name="verbose" value="true"/>
  <include file="$(find-pkg-share gazebo_ros)/launch/empty_world.launch">
  </include>
  
  <!-- robot spawn -->
    <let name="x" value="$(var x)" /> 
    <let name="y" value="$(var y)" /> 
    <let name="z" value="$(var z)" /> 
    <let name="P" value="$(var P)" /> 
    <let name="Y" value="$(var Y)" /> 
    <let name="R" value="$(var R)" /> 
  <include file="$(find-pkg-share jetbot_description)/launch/spawn.launch" >
  </include>

  <!-- rosbot description -->
  <include file="$(find-pkg-share jetbot_description)/launch/jetbot_description.launch" />

  <!-- run SLAM -->
  <!--include file="$(find jetbot_slam)/launch/jetbot_hector_slam.launch" /-->
  <!--include file="$(find jetbot_navigation)/launch/jetbot_move_base.launch" /-->
  
  <!-- node name="rviz" pkg="rviz" exec="rviz" args="-d $(find jetbot_description)/rviz/mapping_view.rviz" / -->
  
</launch>
